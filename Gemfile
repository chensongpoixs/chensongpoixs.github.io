source "https://rubygems.org"

gem "jekyll", "~> 4.3"
gem "jekyll-paginate", "~> 1.1"
gem "jekyll-sitemap", "~> 1.4"

# Windows 不支持 ffi，需要添加以下 gem
platforms :mingw, :x64_mingw, :mswin, :jruby do
  gem "wdm", "~> 0.1.1", :require => false
end

# 代码高亮
gem "rouge"

